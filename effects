    background: url("../ash.png") repeat;
    opacity: 0.35;
    animation: ashFall 15s linear infinite;
    z-index: 1;
}

@keyframes ashFall {
    from { background-position: 0 -200px; }
    to   { background-position: 0 600px; }
}

/* EMBERS on HERO IMAGE (LOCAL: embers.png) */
