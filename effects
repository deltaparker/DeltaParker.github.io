/* ---------- ANIMATIONS ---------- */

@keyframes neonFlicker {
    0%   { opacity: 0.7; text-shadow: 0 0 3px #ff0000; }
    50%  { opacity: 1; text-shadow: 0 0 20px red; }
    100% { opacity: 0.8; }
}

@keyframes smokeRise {
    0%   { transform: translate(-50%, 40px) scale(1);   opacity: .5; }
    50%  { transform: translate(-50%, -20px) scale(1.2); opacity: .25; }
    100% { transform: translate(-50%, -80px) scale(1.3); opacity: 0; }
